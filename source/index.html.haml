#calesita.carousel.slide

  %ol.carousel-indicators
    %li.active{data: { 'slide-to' => "0", 'target' => '#calesita'} }
    %li{data: { 'slide-to' => "1", 'target' => '#calesita'} }
    %li{data: { 'slide-to' => "2", 'target' => '#calesita'} }

  .carousel-inner
    .item.active
      = image_tag lorem.image('1400x200')
      .carousel-caption
        %h4 Primero
        %p= lorem.sentence
    .item
      = image_tag lorem.image('1400x200')
      .carousel-caption
        %h4 Segundo
        %p= lorem.sentence
    .item
      = image_tag lorem.image('1400x200')
      .carousel-caption
        %h4 Tercero
        %p= lorem.sentence

  = link_to '‹' , '#calesita', data: { slide: 'prev' }, class: 'left carousel-control'
  = link_to '›' , '#calesita', data: { slide: 'next' }, class: 'right carousel-control'
